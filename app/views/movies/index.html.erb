<h1>Movies</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release Year</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td>
          <%= link_to movie.title, movie %>
        </td>
        <td>
          <%= movie.roman_release_year %>
        </td>
        <td><%= link_to 'Edit', edit_movie_path(movie), class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% content_for :footer do %>
<%= link_to 'New Movie', new_movie_path, class: 'btn btn-primary' %>
<% end %>